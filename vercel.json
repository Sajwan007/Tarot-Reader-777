{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/contact-simple.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/auth/login.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/bookings.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/clients.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/contact-submissions.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/ping.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/contact", "dest": "/api/contact-simple.js" },
    { "src": "/api/auth/login", "dest": "/api/auth/login.js" },
    { "src": "/api/bookings", "dest": "/api/bookings.js" },
    { "src": "/api/clients", "dest": "/api/clients.js" },
    { "src": "/api/contact-submissions", "dest": "/api/contact-submissions.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}
